generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // "postgresql"
  url      = "file:./dev.db" //env("DATABASE_URL")
}

model log {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  type       String
  topic      String
  message    String
  meta       String?
}

model access {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  message    String
  type       String // info, error, warning
  meta       String?
}
